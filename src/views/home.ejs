<%- include('../partials/head') %>

<div class="text-center tcenter-div mt-5" id="login">
  <div class="container w-25 boder py-5 mt-5">
    <h3>Welcome to Schedule Page</h3>
    <h5><%= locals.user ? user: "User"%></h5>
    <a href="/logout">Logout</a>

    <main class="container">
      <div>
        <table class="table table-dark table-striped">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Name</th>
              <th scope="col">Day</th>
              <th scope="col">Start at</th>
              <th scope="col">End at</th>
            </tr>
          </thead>
          <tbody>
            <% schedules.forEach((element, index) => { %>
            <tr>
              <th scope="row">
                <%= index + 1%>
              </th>
              <td class="text-capitalize">
                <a href="/user/<%= element.id %> ">
                  <%= element.name + ' ' + element.lastName %>
                </a>
              </td>
              <td class="text-capitalize">
                <%= element.weekDay %>
              </td>
              <td>
                <%= element.startTime %>
              </td>
              <td>
                <%= element.endTime %>
              </td>
            </tr>
            <% }) %>


      </div>
  </div>

  <%- include('../partials/footer') %>